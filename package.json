{
  "name": "sql-pg",
  "version": "1.0.0",
  "description": "Complex queries can be written with normal SQL, including the values needs to be bound and prefixed with the `sql` tag.",
  "repository": "sharaal/sql-pg",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "nyc mocha --require intelli-espower-loader --recursive './test/**/*.spec.js'"
  },
  "devDependencies": {
    "espower-loader": "^1.2.2",
    "husky": "^1.3.1",
    "intelli-espower-loader": "^1.0.1",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "power-assert": "^1.6.1",
    "standard": "^12.0.1"
  },
  "directories": {
    "test": "test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  },
  "nyc": {
    "include": "index.js",
    "all": true,
    "reporter": [
      "text",
      "text-summary",
      "lcov"
    ],
    "report-dir": "./coverage"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
